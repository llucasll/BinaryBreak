{
	"compileOnSave": true,
	"compilerOptions": {
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"noImplicitThis": true,
		"strictBindCallApply": true,
		"noImplicitReturns": true,
		
		"module": "esnext",
		"target": "ES2020",
		
		"allowJs": false,
		"checkJs": true,
		"sourceMap": true,
		"removeComments": true,
		
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		
		"incremental": true,
		
		"lib": [
			"DOM",
			"dom.iterable",
			"ES2020"
		]
	},
	"exclude": [
		"node_modules"
	]
}
